{
  "appId": "com.liveu.hr-attendance",
  "productName": "HR Attendance Management System",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron-main.js",
    "package.json",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "server/data",
      "to": "server/data"
    }
  ],
  "win": {
    "target": "nsis",
    "icon": "assets/icon.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "assets/icon.icns"
  },
  "linux": {
    "target": "AppImage",
    "icon": "assets/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "license": "LICENSE.txt"
  },
  "publish": null
}